<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"

    tools:context=".Functionality.barcodescan.DisplayDetailedView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        >



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >
        <ImageView
            android:id="@+id/image_display_detail_favt"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="false"
            android:contentDescription="@string/this_is_preview_of_product"
            android:cropToPadding="true"
            />

    </LinearLayout>


    <TextView
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:id="@+id/product_barcode_display_favt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I will display barcodeId"
        android:textColor="#fff"
        android:textSize="15sp"/>
    <TextView
        android:layout_marginLeft="60dp"

        android:layout_marginTop="15dp"
        android:id="@+id/product_Price_display_favt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="I will display Price"
        android:textSize="15sp"
        />

    <TextView
        android:layout_marginLeft="60dp"

        android:layout_marginTop="15dp"
        android:id="@+id/product_name_display_favt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="I will display Product Name"
        android:textSize="15sp"
        />

    <TextView
        android:layout_marginLeft="60dp"

        android:layout_marginTop="15dp"
        android:id="@+id/product_category_display_favt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="I will display Category"
        android:textSize="15sp"
        />

    <TextView
        android:layout_marginLeft="60dp"


        android:layout_marginTop="15dp"
        android:id="@+id/product_material_display_favt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="I will display Material"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/ViewOnline"
        android:layout_marginLeft="120dp"
        android:background="@drawable/buttonstyle2"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy Online" />

</LinearLayout>