<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"

    tools:context=".Functionality.barcodescan.DisplayDetailedView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        >

        <ImageButton
            android:id="@+id/overflow_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="330dp"

            android:background="#fff"
            android:src="@drawable/ic_star_black_24dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >
        <ImageView
            android:id="@+id/image_display_detail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="false"
            android:contentDescription="@string/this_is_preview_of_product"
            android:cropToPadding="true"
            />

    </LinearLayout>


    <TextView
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:id="@+id/product_barcode_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"/>
    <TextView
        android:layout_marginLeft="50dp"

        android:layout_marginTop="10dp"
        android:id="@+id/product_Price_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"

        android:textSize="20sp"
        />

    <TextView
        android:layout_marginLeft="50dp"

        android:layout_marginTop="10dp"
        android:id="@+id/product_name_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        />

    <TextView
        android:layout_marginLeft="50dp"

        android:layout_marginTop="10dp"
        android:id="@+id/product_category_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        />

    <TextView
        android:layout_marginLeft="50dp"


        android:layout_marginTop="10dp"
        android:id="@+id/product_material_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"

        android:textSize="20sp"
        />
    <TextView
        android:layout_marginLeft="50dp"
        android:id="@+id/product_size_chart"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>